{
  "moduleFileExtensions": [
    "ts",
    "json",
    "js"
  ],
  "rootDir": "./",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "@swc/jest"
    ]
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^~/(.*)$": "<rootDir>/$1"
  }
}
